  <animation>
    <type>select</type>
    <object-name>r-eye</object-name>
    <object-name>l-eye</object-name>
    <condition>
      <greater-than>
        <!-- G load > 2.0 =-64.3481 -->
        <property>/accelerations/pilot/z-accel-fps_sec</property>
        <value>-90</value>
      </greater-than>
    </condition>
  </animation>

	
	
</PropertyList>

