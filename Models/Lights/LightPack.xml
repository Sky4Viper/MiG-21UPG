<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <!-- nav lights -->
  <!-- green and red navigation lights, usually mounted on the wingtips -->
  <!-- note: default orientation is up -->
  <model>
    <name>GreenLight</name>
    <path>Aircraft/MiG-21UPG/Models/Lights/GreenLight.xml</path>
    <offsets>
      <x-m> 0.733</x-m>
      <y-m> 2.7818</y-m>
      <z-m> 0.05445</z-m>
      <roll-deg>-90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  
  <model>
    <name>RedLight</name>
    <path>Aircraft/MiG-21UPG/Models/Lights/RedLight.xml</path>
    <offsets>
        <x-m> 0.733</x-m>
        <y-m>-2.7818</y-m>
        <z-m> 0.05445</z-m>
      <roll-deg>90</roll-deg>
      <pitch-deg>-5</pitch-deg> <!-- due to roll, this tunes heading - I want it to point 5 deg more forward -->
    </offsets>
  </model>
  
  <!-- beacon -->
  <!-- bright red flashing light -->
  <!-- note: default orientation is up -->

  <model>
    <name>Beacon1</name>
    <path>Aircraft/MiG-21UPG/Models/Lights/Beacon.xml</path>
    <offsets>
      <x-m>6.09281</x-m>
      <y-m>0</y-m>
      <z-m>2.74401</z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
  </model>
