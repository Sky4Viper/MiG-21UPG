<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <model>
    <name>BeaconFlare</name>
    <path>Aircraft/MiG-21UPG/Models/Lights/Flares/Beacon-flare.xml</path>
  </model>

  <model>
    <name>BeaconRemb</name>
    <path>Aircraft/MiG-21UPG/Models/Lights/Rembrandt/Beacon-remb.xml</path>
  </model>
  
  <animation>
    <type>select</type>
    <object-name>BeaconFlare</object-name>
    <object-name>BeaconRemb</object-name>
    <condition>
      <and>
        <property>controls/lighting/beacon-switch</property>
        <not><property>sim/crashed</property></not>
      </and>
    </condition>
  </animation>

</PropertyList>
