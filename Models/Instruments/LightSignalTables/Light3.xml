  <animation>
    <type>material</type>
    <object-name>light_13_on</object-name>
    <object-name>light_14_on</object-name>
    <emission>
      <red>1.6</red>
      <green>1.6</green>
      <blue>0</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
    <condition>
      <property>/controls/power/battery</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_5_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <property>/controls/engines/engine[0]/starter</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_6_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <less-than>
          <property>/consumables/fuel/total-fuel-gals</property>
          <value>10.0</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_3_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <and>
          <less-than>
            <property>/consumables/fuel/total-fuel-gals</property>
            <value>150.0</value>
          </less-than>
          <greater-than>
            <property>/consumables/fuel/total-fuel-gals</property>
            <value>50.0</value>
          </greater-than>
        </and>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_2_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <less-than>
          <property>/consumables/fuel/total-fuel-gals</property>
          <value>250.0</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_4_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <less-than>
          <property>/consumables/fuel/total-fuel-gals</property>
          <value>50.0</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_1_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <and>
          <equals>
            <property>sim/weight[0]/selected</property>
            <value>PTB-490 tank</value>
          </equals>
          <equals>
            <property>sim/weight[7]/selected</property>
            <value>PTB-490 tank</value>
          </equals>
          <equals>
            <property>consumables/fuel/tank[6]/level-lbs</property>
            <value>0</value>
          </equals>
          <equals>
            <property>consumables/fuel/tank[8]/level-lbs</property>
            <value>0</value>
          </equals>
        </and>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_7_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <property>engines/engine/afterburner</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_8_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <and>
          <property>engines/engine/afterburner</property>
          <greater-than>
            <property>/controls/engines/engine[0]/throttle</property>
            <value>0.9</value>
          </greater-than>
        </and>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_13_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <less-than>
          <property>/engines/engine[0]/oilp-norm</property>
          <value>0.05</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_14_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <less-than>
          <property>/engines/engine[0]/oilp-norm</property>
          <value>0.05</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_9_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <less-than>
          <property>systems/electrical/volts</property>
          <value>1</value>
        </less-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_10_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <less-than>
          <property>systems/electrical/volts</property>
          <value>1</value>
        </less-than>
      </or>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>light_11_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <equals>
          <property>sim/crashed</property>
          <value type="bool">true</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_12_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <or>
        <property>mig21/controls/buttons/lightstest3</property>
        <greater-than>
          <property>/engines/engine/n2</property>
          <value>89</value>
        </greater-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>light_15_on</object-name>
    <object-name>light_16_on</object-name>
    <object-name>light_17_on</object-name>
    <object-name>light_18_on</object-name>
    <condition>
      <property>/controls/power/battery</property>
      <and>
        <property>mig21/controls/buttons/lightstest3</property>
        <greater-than>
          <property>systems/electrical/volts</property>
          <value>1</value>
        </greater-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>knob</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>mig21/controls/buttons/lightstest3</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("switch")</script>
      </binding>
    </action>
  </animation>

</PropertyList>