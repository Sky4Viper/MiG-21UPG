    <animation>
    <type>material</type>
    <object-name>light_3_on</object-name>
    <object-name>light_5_on</object-name>
    <object-name>light_6_on</object-name>
    <object-name>light_9_on</object-name>
    <object-name>light_10_on</object-name>
    <object-name>light_11_on</object-name>
    <emission>
      <red>1.6</red>
      <green>0</green>
      <blue>0</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
