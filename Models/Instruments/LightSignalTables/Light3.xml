    <object-name>light_7_on</object-name>
    <object-name>light_8_on</object-name>
    <object-name>light_12_on</object-name>
    <object-name>light_15_on</object-name>
    <object-name>light_16_on</object-name>
    <object-name>light_17_on</object-name>
    <object-name>light_18_on</object-name>
