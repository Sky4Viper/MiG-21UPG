<PropertyList>

 <!-- Horizontal Situation Indicator -->
 <name>HSI</name>
 <path>hsi.ac</path>

  <animation>
    <type>material</type>
    <object-name>HSI_bkg</object-name>
    <object-name>HSI_compass-card</object-name>
    <object-name>HSI_cdi-bkg</object-name>
    <object-name>HSI_brg-vor-needle-on</object-name>
    <object-name>HSI_miles-drum-1</object-name>
    <object-name>HSI_miles-drum-2</object-name>
    <object-name>HSI_miles-drum-3</object-name>
    <object-name>HSI_course-drum-1</object-name>
    <object-name>HSI_course-drum-2</object-name>
    <object-name>HSI_course-drum-3</object-name>
    <object-name>HSI_out-of-range-flag</object-name>
    <object-name>HSI_brg-validity-flag</object-name>
    <object-name>HSI_tcn-tofrom-to</object-name>
    <object-name>HSI_tcn-tofrom-from</object-name>
    <object-name>HSI_tcn-cdi-on</object-name>
    <object-name>HSI_course-needle</object-name>
    <emission>
      <red>1.1</red>
      <green>0.3</green>
      <blue>0.1</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>

 <animation>
  <type>select</type>
  <object-name>hsi</object-name>
  <condition>
   <equals>
    <property>sim/current-view/name</property>
    <value>Cockpit View</value>
   </equals>
  </condition>
 </animation>

 <!-- off-flag -->
 <!-- TODO: using simple electrical scheme for now -->
 <animation>
  <type>select</type>
  <object-name>HSI_off-flag</object-name>
  <condition>
   <less-than>
    <property>systems/electrical/outputs/adi</property>
    <value>24</value>
   </less-than> 
  </condition>
 </animation>

<!-- Compass Card -->
 <animation>
  <type>rotate</type>
  <object-name>HSI_compass-card</object-name>
  <property>orientation/heading-magnetic-deg</property>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.0043</z-m>
  </center>
  <axis>
   <x>1</x>
  </axis>
 </animation>

 <!-- TACAN mode -->
 <animation>
  <type>select</type>
  <object-name>HSI_brg-tcn-needle-on</object-name>
  <condition>
   <property>instrumentation/tacan/in-range</property>
  </condition>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>HSI_brg-tcn-needle-on</object-name>
  <property>orientation/heading-magnetic-deg</property>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.0043</z-m>
  </center>
  <axis>
   <x>1</x>
  </axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>HSI_brg-tcn-needle-on</object-name>
  <property>instrumentation/tacan/indicated-bearing-true-deg</property>
  <!-- Note: TCN should provide magnetic-degs, as do the HSI -->
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.0043</z-m>
  </center>
  <axis>
   <x>-1</x>
  </axis>
 </animation>

 <animation>
  <type>select</type>
  <object-name>HSI_brg-needle-off</object-name>
  <condition>
   <not>
    <property>instrumentation/tacan/in-range</property>
   </not>
  </condition>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>HSI_brg-needle-off</object-name>
  <property>orientation/heading-magnetic-deg</property>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.0043</z-m>
  </center>
  <axis>
   <x>1</x>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>HSI_cdi</object-name>
  <property>orientation/heading-magnetic-deg</property>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.0043</z-m>
  </center>
  <axis><x>1</x></axis>
 </animation>
 <animation>
  <type>rotate</type>
  <object-name>HSI_cdi</object-name>
  <property>instrumentation/nav[1]/radials/selected-deg</property>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>-0.0043</z-m>
  </center>
  <axis><x>-1</x></axis>
 </animation>


 <!-- HDG knob -->
 <animation>
  <type>rotate</type>
  <object-name>HSI_hdg-knob</object-name>
  <property>instrumentation/heading-indicator-fg/offset-deg</property>
  <center>
   <x-m>0</x-m>
   <y-m>-0.0318</y-m>
   <z-m>-0.0320</z-m>
  </center>
  <axis><x>-1</x></axis>
 </animation>


 <!-- HDG knob - pick animation-->
 <animation>
  <name>heading-ccw</name>
  <type>pick</type>
  <visible>true</visible>
  <object-name>HSI_hdg-knob-left</object-name>
  <action>
   <button>0</button>
   <repeatable>true</repeatable>
   <interval-sec>0.2</interval-sec>
   <binding>
    <command>property-adjust</command>
    <property>instrumentation/heading-indicator-fg/offset-deg</property>
    <step>-1</step>
    <min>-180</min>
    <max>180</max>
    <wrap>true</wrap>
   </binding>
  </action>
 </animation>

 <animation>
  <name>heading-ccw-fast</name>
  <type>pick</type>
  <visible>true</visible>
  <object-name>HSI_hdg-knob-left</object-name>
  <action>
   <button>2</button>
   <repeatable>true</repeatable>
   <interval-sec>0.2</interval-sec>
   <binding>
    <command>property-adjust</command>
    <property>instrumentation/heading-indicator-fg/offset-deg</property>
    <step>-5</step>
    <min>-180</min>
    <max>180</max>
    <wrap>true</wrap>
   </binding>
  </action>
 </animation>

 <animation>
  <name>heading-cw</name>
  <type>pick</type>
  <visible>true</visible>
  <object-name>HSI_hdg-knob-right</object-name>
  <action>
   <button>0</button>
   <repeatable>true</repeatable>
   <interval-sec>0.2</interval-sec>
   <binding>
    <command>property-adjust</command>
    <property>instrumentation/heading-indicator-fg/offset-deg</property>
    <step>1</step>
    <min>-180</min>
    <max>180</max>
    <wrap>true</wrap>
   </binding>
  </action>
 </animation>

 <animation>
  <name>heading-cw-fast</name>
  <type>pick</type>
  <visible>true</visible>
  <object-name>HSI_hdg-knob-right</object-name>
  <action>
   <button>2</button>
   <repeatable>true</repeatable>
   <interval-sec>0.2</interval-sec>
   <binding>
    <command>property-adjust</command>
    <property>instrumentation/heading-indicator-fg/offset-deg</property>
    <step>5</step>
    <min>-180</min>
    <max>180</max>
    <wrap>true</wrap>
   </binding>
  </action>
 </animation>


 <!-- COURSE Knob -->
