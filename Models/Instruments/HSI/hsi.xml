 <!-- TACAN Distance Digital Display -->
 <animation>
  <type>select</type>
  <object-name>HSI_out-of-range-flag</object-name>
  <condition>
   <not>
    <property>instrumentation/tacan/in-range</property>
   </not>
  </condition>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>HSI_miles-drum-1</object-name>
  <property>instrumentation/tacan/indicated-distance-nm</property>
  <factor>0.1</factor>
  <offset>-1</offset>
  <axis><y>-1</y></axis>
 </animation>
 <animation>
  <type>textranslate</type>
  <object-name>HSI_miles-drum-2</object-name>
  <property>instrumentation/tacan/indicated-distance-nm</property>
  <factor>0.01</factor>
  <offset>-10</offset>
  <step>10</step>
  <scroll>0.5</scroll>
  <axis><y>-1</y></axis>
 </animation>
 <animation>
  <type>textranslate</type>
  <object-name>HSI_miles-drum-3</object-name>
  <property>instrumentation/tacan/indicated-distance-nm</property>
  <factor>0.001</factor>
  <offset>-100</offset>
  <step>100</step>
  <scroll>0.5</scroll>
  <axis><y>-1</y></axis>
 </animation>

<!-- Course Digital Display -->
