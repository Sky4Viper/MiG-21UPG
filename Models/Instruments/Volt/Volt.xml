<?xml version="1.0"?>
<PropertyList>

    <path>Volt.ac</path>

    <animation>
        <type>material</type>
        <object-name>face</object-name>
        <object-name>rect</object-name>
		<object-name>V.001</object-name>
		<object-name>V.002</object-name>
		<object-name>V.003</object-name>
		<object-name>A.001</object-name>
		<object-name>A.002</object-name>
		<object-name>A.003</object-name>
        <!--<emission>
          <red>1.1</red>
          <green>0.3</green>
          <blue>0.1</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>-->
    <emission>
          <factor-prop>controls/lighting/instruments-norm</factor-prop>
          <red>0.8</red>
          <green>0.3</green>
          <blue>0.1</blue>
     </emission>
     <condition>
          <property>/controls/power/battery</property>
     </condition>
    </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>volt-glass</object-name>
  </animation>
    
<!-- Voltage -->

    <animation>
		<type>textranslate</type>
		<object-name>V.003</object-name>
		<property>systems/electrical/volts</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>V.003</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/volts</property>
				<value>10</value>
			</greater-than-equals>
		</condition>
	</animation>
    
    <animation>
		<type>textranslate</type>
		<object-name>V.002</object-name>
		<property>systems/electrical/volts</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
    
    <animation>
		<type>textranslate</type>
		<object-name>V.001</object-name>
		<property>systems/electrical/volts</property>
		<factor>1</factor>
		<step>0.1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
<!-- Amps -->
    
    <animation>
		<type>textranslate</type>
		<object-name>A.003</object-name>
		<property>systems/electrical/amps</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>A.003</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/amps</property>
				<value>100</value>
			</greater-than-equals>
		</condition>
	</animation>
    
    <animation>
		<type>textranslate</type>
		<object-name>A.002</object-name>
		<property>systems/electrical/amps</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
    
    <animation>
		<type>textranslate</type>
		<object-name>A.001</object-name>
		<property>systems/electrical/amps</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
<!-- Label text -->

<text>
	<name>LabelText</name>
	<type type="string">literal</type>
		<text type="string">Voltage And Amperge Indicator</text>
	<draw-text type="bool">true</draw-text>
	<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
	<axis-alignment>yz-plane</axis-alignment>
	<max-height>0.2</max-height>
	<max-width>0.07</max-width>
	<font-resolution>
		<width type="int">32</width>
		<height type="int">32</height>
	</font-resolution>
	<alignment>center-center</alignment>
	<offsets>
		<x-m> 0.01</x-m>
		<y-m> 0.0 </y-m>
		<z-m> 0.0 </z-m>
	</offsets>
</text>

<animation>
	<type>material</type>
		<object-name>LabelText</object-name>
	<emission>
		<red>1.0</red>
		<green>0.8</green>
		<blue>0.0</blue>
	</emission>
</animation>

<animation>
	<type>select</type>
		<object-name>LabelText</object-name>
	<condition>
		<property>/sim/panel-hotspots</property>
	</condition>
</animation>

</PropertyList>