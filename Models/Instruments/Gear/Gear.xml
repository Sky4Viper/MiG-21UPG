<?xml version="1.0"?>

<PropertyList>

    <path>Gear.ac</path>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <emission>
      <red>0.2</red>
      <green>0.2</green>
      <blue>0.2</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>
    
    <animation> 
        <type>material</type>
        <object-name>geardown1</object-name>
        <object-name>flap1</object-name>
        <object-name>flap2</object-name>
        <object-name>airbrake1</object-name>
        <emission> 
            <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
            <red>0</red>
            <green>1.6</green>
            <blue>0</blue>
        </emission>
    </animation>

    <animation> 
        <type>material</type>
        <object-name>gearup1</object-name>
        <emission> 
            <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
            <red>1.6</red>
            <green>0</green>
            <blue>0</blue>
        </emission>
    </animation>

  <!--<animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>gear-glass</object-name>
  </animation>-->

    <animation>
        <type>select</type>
        <object-name>geardown1</object-name>
        <condition>
            <equals>
                <property>gear/gear[0]/position-norm</property>
                <value>1.0</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>gearup1</object-name>
        <condition>
            <greater-than>
                <property>gear/gear[0]/position-norm</property>
                <value>0</value>
            </greater-than>
            <less-than>
                <property>gear/gear[0]/position-norm</property>
                <value>1</value>
            </less-than>
        </condition>
    </animation>

  <animation>
    <type>select</type>
    <object-name>airbrake1</object-name>
    <condition>
      <greater-than>
        <property>surface-positions/speedbrake-pos-norm</property>
        <value>0</value>
        </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>flap1</object-name>
    <condition>
      <greater-than>
        <property>surface-positions/flap-pos-norm</property>
        <value>0</value>
      </greater-than>
      <less-equal>
        <property>surface-positions/flap-pos-norm</property>
        <value>0.5</value>
      </less-equal>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>flap2</object-name>
    <condition>
      <greater-than>
        <property>surface-positions/flap-pos-norm</property>
        <value>0.5</value>
      </greater-than>
      <less-equal>
        <property>surface-positions/flap-pos-norm</property>
        <value>1</value>
      </less-equal>
    </condition>
  </animation>

 
    
<!-- Label text -->

<text>
	<name>LabelText</name>
	<type type="string">literal</type>
		<text type="string">landing Gear Position Indicator</text>
	<draw-text type="bool">true</draw-text>
	<font>Helvetica.txf</font>
		<character-size type="double">0.012</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
	<axis-alignment>yz-plane</axis-alignment>
	<max-height>0.2</max-height>
	<max-width>0.07</max-width>
	<font-resolution>
		<width type="int">32</width>
		<height type="int">32</height>
	</font-resolution>
	<alignment>center-center</alignment>
	<offsets>
		<x-m> 0.03</x-m>
		<y-m> 0.0 </y-m>
		<z-m> 0.0 </z-m>
	</offsets>
</text>

<animation>
	<type>material</type>
		<object-name>LabelText</object-name>
	<emission>
		<red>1.0</red>
		<green>0.8</green>
		<blue>0.0</blue>
	</emission>
</animation>

<animation>
	<type>select</type>
		<object-name>LabelText</object-name>
	<condition>
		<property>/sim/panel-hotspots</property>
	</condition>
</animation>

</PropertyList>