<?xml version="1.0"?>

<PropertyList>

 <path>flp1.ac</path>

 <animation>
  <type>material</type>
   <object-name>flp_knob</object-name>
   <object-name>flp_sw1_run</object-name>
   <emission>
     <red>0.2</red>
     <green>0.2</green>
     <blue>0.2</blue>
     <factor-prop>controls/lighting/instruments-norm</factor-prop>
   </emission>
 </animation>

  <animation>
    <type>material</type>
    <object-name>textlight</object-name>
    <emission>
      <red>1.1</red>
      <green>0.3</green>
      <blue>0.1</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>flp_sw1_light</object-name>
    <emission>
      <red>0.1</red>
      <green>0.9</green>
      <blue>0.1</blue>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>flp_sw2_light</object-name>
    <emission>
      <red>0.1</red>
      <green>0.9</green>
      <blue>0.1</blue>
      <factor-prop>controls/armament/ecm-on</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>flp_knob</object-name>
    <property>controls/armament/ecm-prog</property>
    <interpolation>
      <entry>
        <ind>0</ind><dep>-45</dep>
      </entry>
      <entry>
        <ind>1</ind><dep>-15</dep>
      </entry>
      <entry>
        <ind>2</ind><dep>15</dep>
      </entry>
      <entry>
        <ind>3</ind><dep>45</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>0.00443</x-m>
      <y-m>-0.01873</y-m>
      <z-m>0.00030</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>flp_sw1_run</object-name>
    <object-name>flp_sw1_light</object-name>
    <property>controls/armament/ecm-on</property>
    <offset-deg>-20</offset-deg>
    <factor>40</factor>
    <center>
      <x-m>0.00467</x-m>
      <y-m>0.02990</y-m>
      <z-m>-0.01071</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>flp.cz1</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/armament/ecm-on</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("switch")</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>flp.cz2a</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/armament/ecm-prog</property>
        <step>1</step>
        <min>0.0</min>
        <max>3</max>
      </binding>
      <binding>
      <command>nasal</command>
      <script>switchclicksound.click("switch")</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>flp.cz2b</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/armament/ecm-prog</property>
        <step>-1</step>
        <min>0.0</min>
        <max>3</max>
      </binding>
      <binding>
        <command>nasal</command>
        <script>switchclicksound.click("switch")</script>
      </binding>
    </action>
  </animation>

  <!-- Label text (needs ajustment) -->

  <text>
    <name>LabelText</name>
    <type type="string">literal</type>
    <text type="string">Chaf/Flare Control Panel</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.012</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.07</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m> 0.02</x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.06 </z-m>
      <!--<heading-deg>90</heading-deg>-->
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>LabelText</object-name>
    <emission>
      <red>1.0</red>
      <green>0.8</green>
      <blue>0.0</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LabelText</object-name>
    <condition>
      <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

</PropertyList>