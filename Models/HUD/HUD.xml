<PropertyList>
    
    <path>HUD.ac</path>
	
	<!-- Rembrandt auto switching for glass -->
	
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <condition>
            <greater-than>
                <property>sim/multiplay/generic/float[6]</property>
                <value>9</value>
            </greater-than>
            <property>/sim/rendering/rembrandt/enabled</property>
        </condition>
        <object-name>HUD.Glass</object-name>
        <object-name>Projector</object-name>
      <object-name>Indicators-glass</object-name>
    </effect>
	
	<!-- Glass shader -->

    <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
		    <object-name>HUD.Glass</object-name>
        <object-name>Projector</object-name>
        <object-name>Indicators-glass</object-name>
    </animation>
    
	<animation>
		<type>noshadow</type>
		<object-name>HUD.Glass</object-name>
    <object-name>Projector</object-name>
    <object-name>Indicators-glass</object-name>
	</animation>

  <animation>
    <type>select</type>
    <condition>
      <property>/controls/power/radio</property>
    </condition>
    <object-name>comm1</object-name>
    <object-name>comm1-label</object-name>
    <object-name>comm2</object-name>
    <object-name>comm2-label</object-name>
    <object-name>nav1</object-name>
    <object-name>nav1-label</object-name>
    <object-name>nav2</object-name>
    <object-name>nav2-label</object-name>
  </animation>
    
     <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <condition>
            <property>/sim/rendering/rembrandt/enabled</property>
        </condition>
       <object-name>comm1</object-name>
       <object-name>comm1-label</object-name>
       <object-name>comm2</object-name>
       <object-name>comm2-label</object-name>
       <object-name>nav1</object-name>
       <object-name>nav1-label</object-name>
       <object-name>nav2</object-name>
       <object-name>nav2-label</object-name>
     </effect>

	 
	<!-- Displays -->
	
	<animation>
		<type>material</type>
		<object-name>Buttons</object-name>
		<emission>
			<red>0.045</red>
			<green>0.025</green>
			<blue>0.015</blue>
			<factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
		</emission>
	</animation> 
	
    <animation>
        <type>material</type>
        <object-name>comm1</object-name>
        <object-name>comm1-label</object-name>
        <object-name>comm2</object-name>
        <object-name>comm2-label</object-name>
        <object-name>nav1</object-name>
        <object-name>nav1-label</object-name>
        <object-name>nav2</object-name>
        <object-name>nav2-label</object-name>
        <ambient>
            <red>0.0</red>
            <green>1.0</green>
            <blue>0.0</blue>
        </ambient>
        <diffuse>
            <red>0.0</red>
            <green>0.1</green>
            <blue>0.0</blue>
        </diffuse>
        <emission>
            <red>0.3</red>
            <green>0.8</green>
            <blue>0.3</blue>
        </emission> 
    </animation>

  <animation>
    <type>pick</type>
    <object-name>selectbtn</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/hud/hudmode</property>
        <step>1</step>
        <min>0</min>
        <max>5</max>
        <condition>
          <less-than>
            <property>controls/hud/hudmode</property>
            <value>5</value>
          </less-than>
        </condition>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>controls/hud/hudmode</property>
        <value>0</value>
        <condition>
          <equals>
            <property>controls/hud/hudmode</property>
            <value>5</value>
          </equals>
        </condition>
      </binding>
    </action>
  </animation>
    
