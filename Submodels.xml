    <wind alias="../../CannonTracer/wind"/>
    <expiry alias="../../CannonTracer/expiry"/>
    <collision alias="../../CannonTracer/collision"/>
    <impact alias="../../CannonTracer/impact"/>
    <submodel-path alias="../../CannonTracer/submodel-path"/>
    <x-offset> 10.31360 </x-offset> 
