	<!-- GSh-23-gun -->
	

<!-- cannon bullets -->
  <Cannon>
    <model>Aircraft/MiG-21UPG/Models/Effects/Gun/blank.xml</model>
    <speed>2350</speed>
    <cd>0.25</cd>
    <weight>0.3968</weight>
    <eda>0.006763</eda>
    <fuse-range>0</fuse-range>
    <life>90</life>
