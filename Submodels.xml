    <pitch-offset>0</pitch-offset>
  </Cannon>
  
  <CannonTracer>
    <model>Aircraft/MiG-21UPG/Models/Effects/Gun/Tracer.xml</model>
    <speed>2350</speed>
    <cd>0.25</cd>
    <weight>0.3968</weight>
