    <fuse-range>0</fuse-range>
    <life>90</life>
    <trigger>/controls/armament/trigger-GSh-23</trigger>
    <expiry>true</expiry>
    <repeat>true</repeat>
    <count>-1</count>
    <wind>false</wind>
    <collision>true</collision>
    <impact>true</impact>
    <impact-report>sim/ai/aircraft/impact/bullet</impact-report>
    <submodel-path>Aircraft/MiG-21UPG/Models/Stores/Bullet-Submodel.xml</submodel-path>
    <pitch-offset>0</pitch-offset>
  </CannonTracer>
  
  <submodel>
    <name>GSh-23 bullets</name>
    <model alias="../../Cannon/model"/>
    <trigger>/controls/armament/trigger-GSh-23</trigger>
